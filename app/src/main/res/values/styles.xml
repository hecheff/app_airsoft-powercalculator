<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <!-- Top App Bar -->
        <item name="colorPrimary">@color/colorAccent</item>                         <!-- Top App Bar Override -->
        <item name="android:colorPrimaryDark">@color/statusBar</item>               <!-- Status Bar -->

        <item name="android:textColorPrimary">@color/backgroundColor</item>         <!-- Top Bar Text & Icons -->
        <item name="android:textColorSecondary">@color/textColor</item>             <!-- Settings summary text -->
        <!--<item name="android:textColorTertiary">@color/backgroundColor</item>--> <!-- UNKNOWN -->

        <!-- General -->
        <item name="android:windowBackground">@color/backgroundColor</item>         <!-- Background -->
        <item name="colorAccent">@color/colorAccent</item>                          <!-- Set color of indicators such as radio button and slider highlights -->
        <item name="android:textColor">@color/textColor</item>                      <!-- Basic Text Color -->

        <!-- Options Menu -->
        <item name="android:itemBackground">@color/statusBar</item>

        <!-- Styles for specific objects -->
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- Alert Dialog Style -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!--<item name="android:colorAccent">@color/colorAccent</item>-->
        <item name="android:background">@color/statusBar</item>                     <!-- Set background for Dialog -->
        <item name="textColorAlertDialogListItem">@color/textColor</item>
        <!--<item name="android:textSize">8pt</item>-->
    </style>

    <!-- Radio Button Style -->
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ======================================================================================================== -->

    <!-- iDroid -->
    <style name="iDroid_AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <!-- Top App Bar -->
        <item name="colorPrimary">@color/iDroid_colorAccent</item>                         <!-- Top App Bar Override -->
        <item name="android:colorPrimaryDark">@color/iDroid_statusBar</item>               <!-- Status Bar -->

        <item name="android:textColorPrimary">@color/iDroid_backgroundColor</item>         <!-- Top Bar Text & Icons -->
        <item name="android:textColorSecondary">@color/iDroid_textColor</item>             <!-- Settings summary text -->
        <!--<item name="android:textColorTertiary">@color/backgroundColor</item>--> <!-- UNKNOWN -->

        <!-- General -->
        <item name="android:windowBackground">@color/iDroid_backgroundColor</item>         <!-- Background -->
        <item name="colorAccent">@color/iDroid_colorAccent</item>                          <!-- Set color of indicators such as radio button and slider highlights -->
        <item name="android:textColor">@color/iDroid_textColor</item>                      <!-- Basic Text Color -->

        <!-- Options Menu -->
        <item name="android:itemBackground">@color/iDroid_statusBar</item>

        <!-- Styles for specific objects -->
        <item name="android:radioButtonStyle">@style/iDroid_RadioButtonStyle</item>

        <item name="alertDialogTheme">@style/iDroid_AlertDialogTheme</item>
    </style>

    <!-- Alert Dialog Style -->
    <style name="iDroid_AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!--<item name="android:colorAccent">@color/colorAccent</item>-->
        <item name="android:background">@color/iDroid_statusBar</item>                     <!-- Set background for Dialog -->
        <item name="textColorAlertDialogListItem">@color/iDroid_textColor</item>
        <!--<item name="android:textSize">8pt</item>-->
    </style>

    <!-- Radio Button Style -->
    <style name="iDroid_RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/iDroid_colorAccent</item>
        <item name="android:buttonTint">@color/iDroid_colorAccent</item>
        <item name="android:colorAccent">@color/iDroid_colorAccent</item>
        <item name="colorAccent">@color/iDroid_colorAccent</item>
    </style>

    <!-- ======================================================================================================== -->



</resources>
